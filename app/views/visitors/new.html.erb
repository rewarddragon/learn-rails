<% content_for :title do %>Foobar Kadigan<% end %>
<% content_for :description do %>Website of Foobar Kadigan<% end %>
<section>
  <%= image_tag "RewardDragonLogo_scaled_520x144.png" %>
</section>
<section>
  <div class="column">
    <h2>Stay in touch.</h2>

  <div class="form-centered">
    <%= simple_form_for @visitor do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
      <br/>
      <%= f.button :submit, "Sign up for the newsletter", :class => "[tiny small large] submit" %>
      <% end %>
    </div>
  </div>
</section>



